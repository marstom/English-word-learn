	Label:
		id: lab1
		text:"Wyniki:"
		font_size: 37
		pos_hint: {"center_x": .15, "center_y":.92}
	Label:
		id: lWyniki
		text:"Dictionary1: 50%\nDictionary2: 75%"
		font_size:24
		pos: lab1.x+200, lab1.y-190
		
	Button:
		id: bRestart
		text: "Restart"
		pos_hint: {"center_x": .5, "center_y":.1}
		size_hint:.50,.10
		on_release:	root.bRestart()

		
	Button:
		id: bQuit
		text: "Quit"
		pos_hint: {"center_x": .85, "center_y":.1}
		size_hint:.10,.10
		on_release: root.bQuit()
		
		